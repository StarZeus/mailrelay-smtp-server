// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Email {
  id              Int      @id @default(autoincrement())
  from            String
  to              String   // Comma-separated list of recipients
  subject         String?
  text            String?
  html            String?
  attachments     Json?
  headers         Json?
  size            Int      @default(0)  // Size in bytes
  receivedAt      DateTime @default(now())
  isRead          Boolean  @default(false)
  processedByRules Boolean @default(false)
  processedByRuleId Int?
  processedByRuleName String?
}

model EmailRule {
  id              Int      @id @default(autoincrement())
  name            String
  isActive        Boolean  @default(true)
  conditionGroups Json     // Array of RuleConditionGroup
  action          Json     // Action configuration
  createdAt       DateTime @default(now())
}
